
@{
	ViewBag.Title = "Capture your face";
}
<br />
@if (TempData["error"] != null)
{
    <div class="alert alert-danger">@TempData["error"]</div>
}

<form action="/Login/CheckLogin" method="POST" role="form">
    <div style="width: 980px; text-align: center">
        <div>
            <div id="Camera">
            </div>
            <button class="btn btn-success" onclick="webcam.capture();">
                <span class="glyphicon glyphicon-camera"></span>
                Capture and Login
            </button>
        </div>
    </div>
    <br /><br /><br /><br />
</form>


    @section Scripts {
        @*<script type="text/javascript">
