            </script>*@
        <script src="@Url.Content("~/Scripts/App/jquery.webcam.js")"></script>

        <script>
            $("#Camera").webcam({
                width: 320,
                height: 240,
                mode: "save",
                swffile: "@Url.Content("~/Scripts/App/jscam.swf")",
                onTick: function () { },
                onSave: function () {
                    UploadPicture();
                },
                onCapture: function () {
                    webcam.save("@Url.Content("~/Login/Capture")/");
                },
                debug: function () { },
                onLoad: function () { }

            });

        </script>

    }
