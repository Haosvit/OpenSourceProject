<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet"
		  href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

	<!-- Optional theme -->
	<link rel="stylesheet"
		  href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">

	<!-- Latest compiled and minified JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
	<div class="container">
        <style type="text/css">
            body {
                background-color: #BCCED4;
            }
        </style>

		<div class="row Header">
			<table>
				<tr>
					<td rowspan="2"><img class="PageLogo" src="~/Content/Images/logo.png"></td>
					<td class="HeadLine1">Net1 Group</td>
				</tr>
				<tr>
					<td class="HeadLine2">@ViewBag.Title</td>
				</tr>
			</table>
		</div>
		<div class="row">
			@RenderBody()
		</div>
		<div class="row Footer" >
            <div class="col-lg-12" style="
                bottom: 0;
                background: black;
                color: white;
                padding: 15px;
            ">
                <div class="col-lg-4">
                    <p><b>DEMO MICROSOFT API</b></p>
                    Nguyễn Minh Trí<br/>
                    Nguyễn Phúc Hảo<br />
                    Lê Quang Cảnh<br />
                    Trần Đình Vĩ<br />
                    Nguyễn Viết Thắng
                </div>
                <div class="col-lg-4">
                    <div class="row">
                        <p><i class="fa fa-map-marker" aria-hidden="true"></i> Address: Da Nang University Technology</p>
                    </div>
                    <div class="row">
                        <p><i class="fa fa-phone" aria-hidden="true"></i>Phone: 098656325</p>
                    </div>
                    <div class="row">
                        <p><i class="fa fa-envelope" aria-hidden="true"></i>Email: groupnet1@gmail.com</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <p>Website Demo Microsoft Face API</p>
                    <p style="word-wrap: break-word">This website can authenticate use your face.</p>
                </div>
            </div>
		</div>
	</div>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
